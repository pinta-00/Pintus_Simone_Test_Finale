<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondomainactivity"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Benvenuto, scegli un argomento!"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_storia"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:insetTop="20dp"
                android:insetBottom="30dp"
                android:text="Storia" />

            <TextView
                android:id="@+id/txt_storia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:visibility="invisible" />

            <Button
                android:id="@+id/btn_geografia"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:insetTop="20dp"
                android:insetBottom="30dp"
                android:text="Geografia" />

            <TextView
                android:id="@+id/txt_geografia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:visibility="invisible" />

            <Button
                android:id="@+id/btn_letteratura"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:insetTop="20dp"
                android:insetBottom="30dp"
                android:text="Letteratura" />

            <TextView
                android:id="@+id/txt_letteratura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:visibility="invisible" />

            <Button
                android:id="@+id/btn_sport"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:insetTop="20dp"
                android:insetBottom="30dp"
                android:text="Sport" />

            <TextView
                android:id="@+id/txt_sport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:visibility="invisible" />

            <Button
                android:id="@+id/btn_spettacolo"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:insetTop="20dp"
                android:insetBottom="30dp"
                android:text="Spettacolo" />

            <TextView
                android:id="@+id/txt_spettacolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:visibility="invisible" />

            <Button
                android:id="@+id/btn_animali"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:insetTop="20dp"
                android:insetBottom="30dp"
                android:text="Animali" />

            <TextView
                android:id="@+id/txt_animali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>